class Employee:

    pass

emp1=Employee()
emp2=Employee()


emp1.first="Alex"
emp1.last="Kass"
emp1.email="Alex.Kass@company.com"
emp1.age=25
emp1.pay=5000

emp2.first="David"
emp2.last="Tobias"
emp2.email="David.Tobias@company.com"
emp2.age=28
emp2.pay=4000


class Employee:
    def __init__(self,first,last,age,pay):
        self.first = first
        self.last = last
        self.age = age
        self.pay = pay
 
    def full_name(self):
        return '{} {}'.format(self.first,self.last)
    def emails_details(self):
        return '{}.{}'.format(self.first,self.last+'@company.com')
 
emp1=Employee("Alex", "Kass", 25, 5000)
emp2=Employee("David", "Tobias", 28, 4000)
 
print(emp1.full_name())
print(emp1.age)
print(emp1.pay)
print(emp1.emails_details())



4.


num = 5
factorial = 1

for i in range(1,5):
    factorial = factorial * i

print("The factorial of num is: ", factorial)



