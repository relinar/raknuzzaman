sum1=0
sum2=0
for i in range(1,101):
    if i%3==0 and i%5==0:
     sum1 += i
    else:
     sum2 += i
print("Sum of even numbers:", sum1)
print("Sum of odd numbers:", sum2)

difference=sum1-sum2
print("Difference is:", difference)



2. 


num = int(input("Enter your number: "))
sum = 0
square = num * num

while square != 0:
    rem = square % 10
    sum = sum + rem
    square = square //10
if sum == num:
    print("Neon number")
else:
    print("Not a neon number")



