class user:
    def __init__(self,name,age,gender,id_num):
        self.name=name
        self.age=age
        self.gender=gender
        self.id_num=id_num

    def user_information(self):
        print("User information")
        print("Name: ", self.name)
        print("Age: ", self.age)
        print("Gender: ", self.gender)
        print("id number: ", self.id_num)

class bank(user):
    def __init__(self,name,age,gender,id_num):
        super().__init__(name,age,gender,id_num)
        self.balance=0
    def deposit(self,amount):
        self.amount=amount
        self.balance+=self.amount
        print("Your account has been updated",self.balance)


    def withdraw(self,amount):
        self.amount=amount
        if self.amount>self.balance:
            print("You do not have enough money", self.balance)
        else:
            self.balance-=self.amount
            print("Your account has been updated", self.balance)
    
    def view_details(self):
        self.user_information()

john=bank("John", 23, "Male", 67545)
john.deposit(1000)
